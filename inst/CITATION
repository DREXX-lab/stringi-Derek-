citHeader("To cite package 'stringi' in publications use:")

citEntry(entry = "Manual",
  title = "stringi: Fast and Portable Character String Processing in R",
  author = personList(as.person("Marek Gagolewski")),
  year = "2020",
  url = "https://stringi.gagolewski.com/",
  textVersion =
  paste("Gagolewski M. (2020).",
        "stringi: Fast and Portable Character String Processing in R",
        "https://stringi.gagolewski.com/.")
)
